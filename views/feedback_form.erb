<form id="feedback-main" class = "feedback" method="post" action="/send">
  <p style="position: absolute; top:-4%; right: 5%; cursor: pointer;" onclick="toggle_visibility()"><b>X</b></p>
  <h3 style="text-align: center;"><b>Feedback</b></h3>

  <label for="name">Name </label><br>
  <input type="text" id="name" name="user"><br><br>

  <label for="email">Email</label><br>
  <input type="text" id="email" name="email" placeholder="If you expect a reply"><br><br>

  <label for="message">Message </label><br>

  <textarea id="message" name="message" rows="3"
            placeholder='Leave any comment or suggest an improvement or definition correction'
            onfocus="this.placeholder=''"
            onblur="this.placeholder='Leave any comment or suggest an improvement or definition correction'"></textarea>
  <br><br>
  <input type="submit" value="Send">
</form>

<script>
    function toggle_visibility() {
        let e = document.getElementById('feedback-main');
        if(e.style.display == 'block')
            e.style.display = 'none';
        else
            e.style.display = 'block';
    }
</script>
<button id="popup" class="feedback-button" onclick="toggle_visibility()">Feedback</button>
